---
const { title = 'The Familiar Choice Method™ – Familiarity + Visibility = Calls', description = 'A simple framework to help local service businesses stop competing as strangers and start becoming the familiar, trusted choice.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://familiarchoice.com" />
    <meta name="theme-color" content="#0f172a" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style> body{font-family:Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;} </style>
    import "../styles/global.css";
const { title = "The Familiar Choice Method™ – Familiarity + Visibility = Calls", description = "A simple framework to help local service businesses stop competing as strangers and start becoming the familiar, trusted choice." } = Astro.props;

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Organization',
        name: 'Familiar Choice',
        url: 'https://familiarchoice.com',
        sameAs: ['https://www.linkedin.com/in/rohit-singh-atx/'],
        brand: { '@type': 'Brand', name: 'The Familiar Choice Method' }
      })}
    </script>
  </head>
  <body>
    <div class="container">
      <slot />
      <footer class="text-center text-sm text-slate-300/70 mt-10 py-6">
        © {new Date().getFullYear()} Rohit Singh • The Familiar Choice Method™
      </footer>
    </div>
  </body>
</html>
